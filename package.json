{
    "name": "@deepcitation/deepcitation-js",
    "version": "1.1.11",
    "description": "DeepCitation JavaScript SDK for deterministic AI citation verification",
    "type": "module",
    "private": false,
    "license": "MIT",
    "author": "DeepCitation <opensource@deepcitation.com>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/deepcitation/deepcitation-js.git",
        "directory": "packages/deepcitation"
    },
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "sideEffects": [
        "*.css"
    ],
    "files": [
        "lib",
        "LICENSE"
    ],
    "scripts": {
        "build": "rimraf lib && tsc && cp src/react/styles.css lib/react/styles.css",
        "build:watch": "rimraf lib && tsc --watch",
        "test": "bun test ./src/__tests__/*.test.ts ./src/__tests__/*.test.tsx",
        "test:jest": "jest",
        "test:watch": "jest --watch",
        "test:ct": "playwright test -c playwright-ct.config.ts",
        "test:ct:ui": "playwright test -c playwright-ct.config.ts --ui",
        "prepublishOnly": "npm run build"
    },
    "engines": {
        "node": ">=22"
    },
    "dependencies": {
        "diff": "^8.0.2"
    },
    "peerDependencies": {
        "react": ">=17.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        }
    },
    "devDependencies": {
        "@happy-dom/global-registrator": "^20.0.11",
        "@playwright/experimental-ct-react": "^1.57.0",
        "@playwright/test": "^1.57.0",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^24.6.2",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^4.3.4",
        "bun-types": "^1.3.5",
        "happy-dom": "^20.0.11",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3",
        "vite": "^7.3.0"
    },
    "exports": {
        ".": {
            "types": "./lib/index.d.ts",
            "import": "./lib/index.js",
            "require": "./lib/index.js"
        },
        "./react": {
            "types": "./lib/react/index.d.ts",
            "import": "./lib/react/index.js",
            "require": "./lib/react/index.js"
        },
        "./react/styles.css": "./lib/react/styles.css"
    },
    "keywords": [
        "citation",
        "ai",
        "verification",
        "llm",
        "hallucination",
        "react",
        "typescript"
    ]
}
