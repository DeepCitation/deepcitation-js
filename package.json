{
  "name": "@deepcitation/deepcitation-js",
  "version": "1.1.53",
  "description": "DeepCitation JavaScript SDK for deterministic AI citation verification",
  "type": "module",
  "private": false,
  "license": "MIT",
  "author": "DeepCitation <opensource@deepcitation.com>",
  "homepage": "https://deepcitation.com",
  "bugs": {
    "url": "https://github.com/DeepCitation/deepcitation-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeepCitation/deepcitation-js.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib",
    "src/tailwind.css",
    "!lib/**/*.map"
  ],
  "scripts": {
    "build": "tsup && npm run build:css",
    "build:css": "tailwindcss -i ./src/styles.css -o ./lib/styles.css --minify",
    "build:watch": "tsup --watch",
    "build:tsc": "rm -rf lib && bun ./node_modules/typescript/bin/tsc",
    "test": "bun test ./src/__tests__/*.test.ts ./src/__tests__/*.test.tsx",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:ct": "playwright test -c playwright-ct.config.ts",
    "test:ct:ui": "playwright test -c playwright-ct.config.ts --ui",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepublishOnly": "npm run build",
    "lint": "biome ci ./src",
    "lint:fix": "biome check --fix ./src",
    "format": "biome format ./src",
    "format:fix": "biome format --write ./src",
    "check": "biome ci ./src",
    "check:fix": "biome check --fix ./src"
  },
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@radix-ui/react-popover": "^1.0.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "@radix-ui/react-popover": {
      "optional": true
    }
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.5.0",
    "@jest/globals": "^29.7.0",
    "@playwright/experimental-ct-react": "^1.58.1",
    "@playwright/test": "^1.58.1",
    "@radix-ui/react-popover": "^1.1.15",
    "@rollup/rollup-linux-x64-gnu": "^4.57.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.10",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "bun-types": "^1.3.8",
    "esbuild": "0.27.3",
    "happy-dom": "^20.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@biomejs/biome": "~2.3.14",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rimraf": "^5.0.10",
    "size-limit": "^11.2.0",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "25 KB"
    },
    {
      "path": "lib/client/index.js",
      "limit": "10 KB"
    },
    {
      "path": "lib/prompts/index.js",
      "limit": "15 KB"
    },
    {
      "path": "lib/react/index.js",
      "limit": "15 KB"
    }
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs",
      "default": "./lib/index.js"
    },
    "./client": {
      "types": "./lib/client/index.d.ts",
      "import": "./lib/client/index.js",
      "require": "./lib/client/index.cjs",
      "default": "./lib/client/index.js"
    },
    "./prompts": {
      "types": "./lib/prompts/index.d.ts",
      "import": "./lib/prompts/index.js",
      "require": "./lib/prompts/index.cjs",
      "default": "./lib/prompts/index.js"
    },
    "./react": {
      "types": "./lib/react/index.d.ts",
      "import": "./lib/react/index.js",
      "require": "./lib/react/index.cjs",
      "default": "./lib/react/index.js"
    },
    "./types": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/types/index.js",
      "require": "./lib/types/index.cjs",
      "default": "./lib/types/index.js"
    },
    "./slack": {
      "types": "./lib/rendering/slack/slackRenderer.d.ts",
      "import": "./lib/rendering/slack/slackRenderer.js",
      "require": "./lib/rendering/slack/slackRenderer.cjs",
      "default": "./lib/rendering/slack/slackRenderer.js"
    },
    "./github": {
      "types": "./lib/rendering/github/githubRenderer.d.ts",
      "import": "./lib/rendering/github/githubRenderer.js",
      "require": "./lib/rendering/github/githubRenderer.cjs",
      "default": "./lib/rendering/github/githubRenderer.js"
    },
    "./html": {
      "types": "./lib/rendering/html/htmlRenderer.d.ts",
      "import": "./lib/rendering/html/htmlRenderer.js",
      "require": "./lib/rendering/html/htmlRenderer.cjs",
      "default": "./lib/rendering/html/htmlRenderer.js"
    },
    "./terminal": {
      "types": "./lib/rendering/terminal/terminalRenderer.d.ts",
      "import": "./lib/rendering/terminal/terminalRenderer.js",
      "require": "./lib/rendering/terminal/terminalRenderer.cjs",
      "default": "./lib/rendering/terminal/terminalRenderer.js"
    },
    "./tailwind.css": "./src/tailwind.css",
    "./styles.css": "./lib/styles.css",
    "./package.json": "./package.json"
  },
  "keywords": [
    "citation",
    "ai",
    "verification",
    "llm",
    "hallucination",
    "react",
    "typescript",
    "openai",
    "anthropic",
    "claude",
    "gpt",
    "rag",
    "reference",
    "source-verification",
    "fact-checking",
    "grounding"
  ]
}
