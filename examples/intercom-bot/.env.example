# DeepCitation API Key
# Get yours at: https://deepcitation.com/signup
DEEPCITATION_API_KEY=sk-dc-your_api_key_here

# OpenAI API Key
# Get yours at: https://platform.openai.com
OPENAI_API_KEY=sk-your-openai-key

# Intercom Access Token
# Get yours at: https://developers.intercom.com
# Go to: Developer Hub > Your App > Authentication
INTERCOM_ACCESS_TOKEN=your_intercom_access_token

# Intercom Client Secret (for webhook signature verification)
# Found in: Developer Hub > Your App > Basic Information
INTERCOM_CLIENT_SECRET=your_client_secret_for_webhooks

# Server Configuration
PORT=3000

# Confidence threshold (0-1) - responses below this are flagged for review
MIN_CONFIDENCE_THRESHOLD=0.8
