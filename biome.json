{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "includes": [
      "src/**",
      "!**/node_modules",
      "!**/dist",
      "!**/lib",
      "!**/coverage",
      "!**/playwright-report",
      "!**/test-results"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "arrowParentheses": "asNeeded"
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": false
      },
      "complexity": {
        "useLiteralKeys": "off",
        "useOptionalChain": "off",
        "noUselessFragments": "warn",
        "noBannedTypes": "off",
        "noImportantStyles": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn",
        "noGlobalEval": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "warn",
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "noUnusedFunctionParameters": "warn",
        "useParseIntRadix": "warn",
        "noEmptyPattern": "warn",
        "noInvalidPositionAtImportRule": "warn",
        "noChildrenProp": "warn",
        "noUnreachable": "warn",
        "noUnknownPseudoClass": "warn",
        "noVoidTypeReturn": "warn",
        "useJsxKeyInIterable": "warn",
        "noInvalidUseBeforeDeclaration": "off"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noConsole": "off",
        "noVar": "error",
        "noImplicitAnyLet": "off",
        "noArrayIndexKey": "off",
        "noAssignInExpressions": "off",
        "useIterableCallbackReturn": "off",
        "noGlobalIsNan": "warn",
        "noGlobalIsFinite": "warn",
        "noDoubleEquals": "warn",
        "noControlCharactersInRegex": "warn",
        "noSparseArray": "warn",
        "noFallthroughSwitchClause": "warn",
        "noShadowRestrictedNames": "warn",
        "noRedeclare": "warn",
        "noSelfCompare": "warn",
        "noExportsInTest": "warn",
        "noDuplicateClassMembers": "warn",
        "noShorthandPropertyOverrides": "warn"
      },
      "style": {
        "useConst": "error",
        "noNonNullAssertion": "warn",
        "useTemplate": "off",
        "useNodejsImportProtocol": "off",
        "useComponentExportOnlyModules": {
          "level": "warn",
          "options": {
            "allowConstantExport": true
          }
        }
      }
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
